<View>
    <Header value="Text content"/>
    <Text name="title" value="$text_1" selectionEnabled="false"/>
    <!--<HyperText name="video" width="540" height="auto" value="$video_embedd"/>-->

    <HyperText name="gap1" value="">
        <br/>
    </HyperText>
    <Header value="Media content"/>
    <View style="display: flex; flex-wrap: wrap;">
        <View>
            <Text value="Media 1" name="media_1_l"/>
            <Image width="640px" valueList="$img_1" name="img_1" zoomControl="false"/>
        </View>
        <View>
            <Text value="Media 2" name="media_2_l"/>
            <Image width="640px" valueList="$img_2" name="img_2" zoomControl="false"/>
        </View>
        <View>
            <Text value="Media 3" name="media_3_l"/>
            <Image width="640px" valueList="$img_3" name="img_3" zoomControl="false"/>
        </View>
        <View>
            <Text value="Media 4" name="media_4_l"/>
            <Image width="640px" valueList="$img_4" name="img_4" zoomControl="false"/>
        </View>
    </View>

    <Header value="Is there any harmful content?"/>
    <Choices name="any_harmful" toName="title" showInline="true" choice="multiple">
        <Choice value="Text"/>
        <Choice value="Media 1"/>
        <Choice value="Media 2"/>
        <Choice value="Media 3"/>
        <Choice value="Media 4"/>
    </Choices>

    <View>
        <Header value="Is there Nature?"/>
        <Choices name="any_nature" toName="title">
            <Choice value="Text No / Media No" alias="-"/>
            <Choice value="Text Yes / Media No" alias="t"/>
            <Choice value="Text No / Media Yes" alias="m"/>
            <Choice value="Text Yes/ Media Yes" alias="tm"/>
        </Choices>
    </View>

    <View visibleWhen="choice-selected" whenTagName="any_nature" whenChoiceValue="t,m,tm">

        <Header value="Is there a Stewardship Action?"/>
        <Choices name="any_stewardship" toName="title">
            <Choice value="Text No / Media No" alias="-"/>
            <Choice value="Text Yes / Media No" alias="t"/>
            <Choice value="Text No / Media Yes" alias="m"/>
            <Choice value="Text Yes/ Media Yes" alias="tm"/>
        </Choices>

        <Header value="Is there any Value Expression (either in the text or in the media content)?"/>
        <Choices name="any_value_expression" toName="title" showInline="true">
            <Choice value="No"/>
            <Choice value="Yes"/>
        </Choices>

        <View visibleWhen="choice-selected" whenTagName="any_value_expression" whenChoiceValue="Yes" required="true">
            <Header value="Text Value Expression?"/>
            <Choices name="text_value_expression" toName="title" showInline="true">
                <Choice value="None"/>
                <Choice value="Implicit"/>
                <Choice value="Explicit"/>
            </Choices>

            <Header value="Media Value Expression?"/>
            <Choices name="media_value_expression" toName="title" required="true" showInline="true">
                <Choice value="None"/>
                <Choice value="Implicit"/>
                <Choice value="Explicit"/>
            </Choices>

            <Header value="Relevant Media"/>
            <Text name="rel_media" value="Select relevant Media items" selectionEnabled="false"/>
            <Choices name="media_relevant" toName="title" required="true" choice="multiple" showInline="true">
                <Choice value="Media 1"/>
                <Choice value="Media 2"/>
                <Choice value="Media 3"/>
                <Choice value="Media 4"/>
            </Choices>

            <Header>Nature Element</Header>
            <Collapse bordered="true" accordion="true">
                <Panel value="Type of Nature Element/Process 1">
                    <Text value="Type of nature element/process in text" name="ne_ty_0_t"/>
                    <Choices name="ne_0" toName="title" showInline="true">
                        <Choice value="Material"/>
                        <Choice value="Immaterial"/>
                        <Choice value="Biotic"/>
                        <Choice value="Abiotic"/>
                        <Choice value="Artificial surfaces"/>
                        <Choice value="Agricultural areas"/>
                        <Choice value="Forest and semi-natural areas"/>
                        <Choice value="Wetlands"/>
                        <Choice value="Water bodies"/>
                        <Choice value="Human"/>
                        <Choice value="Positive"/>
                        <Choice value="Negative"/>
                        <Choice value="Other"/>
                    </Choices>

                    <View visibleWhen="choice-selected" whenTagName="ne_0" whenChoiceValue="Other">
                        <Text value="Specify the type of nature element/process" name="ne_other_0_t"/>
                        <TextArea name="ne_other_0" toName="title" editable="true"/>
                    </View>

                    <Text value="Nature Element in Text" name="ne_t_0_t"/>
                    <Choices name="ne_t_0" toName="title" showInline="true">
                        <Choice value="Yes"/>
                        <Choice value="No"/>
                    </Choices>

                    <View visibleWhen="choice-selected" whenTagName="ne_t_0" whenChoiceValue="No">
                        <Text value="Nature Element in media" name="ne_m_0_t"/>
                        <Choices name="ne_m_0" toName="title" showInline="true">
                            <Choice value="Yes"/>
                            <Choice value="No"/>
                        </Choices>
                    </View>

                    <View visibleWhen="choice-selected" whenTagName="ne_t_0" whenChoiceValue="Yes">
                        <Text value="Media rejects NE in Text" name="ne_m_rej_0_t"/>
                        <Choices name="ne_m_rej_0" toName="title" showInline="true">
                            <Choice value="Yes"/>
                            <Choice value="No"/>
                        </Choices>
                    </View>
                </Panel>
            </Collapse>

            <View visibleWhen="choice-selected" whenTagName="any_stewardship" whenChoiceValue="t,m,tm">
                <Header>Stewardship Action</Header>
                <Collapse bordered="true" accordion="true">
                    <Panel value="Type of Stewardship Action 1">
                        <Text value="Type of Stewardship Action" name="sa_0_t"/>
                        <Choices name="sa_0" toName="title" showInline="true">
                            <Choice value="Preservation"/>
                            <Choice value="Restoration"/>
                            <Choice value="Sustainable_use_of_resources"/>
                            <Choice value="Advocacy"/>
                            <Choice value="Education"/>
                            <Choice value="Monitoring"/>
                            <Choice value="Posing"/>
                            <Choice value="Jogging"/>
                            <Choice value="Picnic"/>
                            <Choice value="Other"/>
                        </Choices>

                        <View visibleWhen="choice-selected" whenTagName="sa_0" whenChoiceValue="Other">
                            <Text value="Specify the type of stewardship action" name="sa_other_0_t"/>
                            <TextArea name="sa_other_0" toName="title" editable="true"/>
                        </View>

                        <Text value="Stewardship Action in Text" name="sa_t_0_t"/>
                        <Choices name="sa_t_0" toName="title" showInline="true">
                            <Choice value="Yes"/>
                            <Choice value="No"/>
                        </Choices>

                        <View visibleWhen="choice-selected" whenTagName="sa_t_0" whenChoiceValue="No">
                            <Text value="Stewardship Action in Media" name="sa_m_0_t"/>
                            <Choices name="sa_m_0" toName="title" showInline="true">
                                <Choice value="Yes"/>
                                <Choice value="No"/>
                            </Choices>
                        </View>

                        <View visibleWhen="choice-selected" whenTagName="sa_t_0" whenChoiceValue="Yes">
                            <Text value="Media rejects SA in Text" name="sa_m_rej_0_t"/>
                            <Choices name="sa_m_rej_0" toName="title" showInline="true">
                                <Choice value="Yes"/>
                                <Choice value="No"/>
                            </Choices>
                        </View>

                    </Panel>
                </Collapse>
            </View>
            <Header>Relational Value</Header>
            <Collapse bordered="true" accordion="true">
                <Panel value="Type of Relational Value 1">
                    <Text value="Type of Relational Value text" name="rv_0_t"/>
                    <Choices name="rv_0" toName="title" showInline="true" allowNested="true">
                        <Choice value="Personal identity"/>
                        <Choice value="Cultural_identity"/>
                        <Choice value="Social cohesion"/>
                        <Choice value="Social memory"/>
                        <Choice value="Social relations"/>
                        <Choice value="Sense of place"/>
                        <Choice value="Sense of agency"/>
                        <Choice value="Spirituality"/>
                        <Choice value="Stewardship principle"/>
                        <Choice value="Stewardship eudaimonia"/>
                        <Choice value="Literacy"/>
                        <Choice value="Livelihoods"/>
                        <Choice value="Well-being"/>
                        <Choice value="Aesthetics"/>
                        <Choice value="Reciprocity"/>
                        <Choice value="Good life"/>
                        <Choice value="Kinship"/>
                    </Choices>

                    <Text value="Relational Value  in Text" name="rv_t_0_t"/>
                    <Choices name="rv_t_0" toName="title" showInline="true">
                        <Choice value="Yes"/>
                        <Choice value="No"/>
                    </Choices>

                    <View visibleWhen="choice-selected" whenTagName="rv_t_0" whenChoiceValue="No">
                        <Text value="Relational Value in Media" name="rv_m_0_t"/>
                        <Choices name="rv_m_0" toName="title" showInline="true">
                            <Choice value="Yes"/>
                            <Choice value="No"/>
                        </Choices>
                    </View>

                    <View visibleWhen="choice-selected" whenTagName="rv_t_0" whenChoiceValue="Yes">
                        <Text value="Media rejects RV in Text" name="rv_m_rej_0_t"/>
                        <Choices name="rv_m_rej_0" toName="title" showInline="true">
                            <Choice value="Yes"/>
                            <Choice value="No"/>
                        </Choices>
                    </View>


                    <Text name="rv_0_certain_t" value="Are you certain about this Relational value type?"/>
                    <Choices name="rv_0_certain" toName="title" showInline="true">
                        <Choice value="Yes"/>
                        <Choice value="No"/>
                    </Choices>
                    <View visibleWhen="choice-selected" whenTagName="rv_0_certain" whenChoiceValue="No">
                        <Text name="rv_0_uncertain_other_t"
                              value="What other Relational Values could it be confused with?"/>
                        <Choices name="rv_0_uncertain_other" toName="title" showInline="true" choice="multiple">
                            <Choice value="Personal identity"/>
                            <Choice value="Cultural identity"/>
                            <Choice value="Social cohesion"/>
                            <Choice value="Social memory"/>
                            <Choice value="Social relations"/>
                            <Choice value="Sense of place"/>
                            <Choice value="Sense of agency"/>
                            <Choice value="Spirituality"/>
                            <Choice value="Stewardship principle"/>
                            <Choice value="Stewardship eudaimonia"/>
                            <Choice value="Literacy"/>
                            <Choice value="Livelihoods"/>
                            <Choice value="Well-being"/>
                            <Choice value="Aesthetics"/>
                            <Choice value="Reciprocity"/>
                            <Choice value="Good life"/>
                            <Choice value="Kinship"/>
                        </Choices>
                    </View>
                </Panel>
            </Collapse>
        </View>
    </View>
</View>