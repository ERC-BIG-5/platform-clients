{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CrawlerTaskConfig",
  "type": "object",
  "properties": {
    "platform": {
      "type": "string",
      "enum": [
        "youtube",
        "twitter"
      ]
    },
    "task_name": {
      "type": "string"
    },
    "collection_config": {
      "type": "array",
      "items": {
        "type": "object"
      },
      "default": []
    },
    "auth_config": {
      "type": "object"
    }
  },
  "required": [
    "platform",
    "task_name",
    "collection_config"
  ]
}